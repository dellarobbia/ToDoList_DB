<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name = "UserLists.ToDoListItem" table = "list_items">
        <meta attribute = "class-description">
            To-Do list items.
        </meta>

        <id name = "itemID" type = "int" column = "list_item_id">
            <generator class="native"/>
        </id>

        <property name = "itemDescription" column = "item_description" type="string"/>
        <property name = "dueDate" column = "item_due_date" type="string"/>
        <property name = "completed" column = "item_completed" type="boolean"/>
    </class>
</hibernate-mapping>